{% extends "base.html.twig" %}

{% block title %}Atelier - Desk{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="jumbotron">
                    <h1 class="display-4">Bienvenue sur Atelier - Desk</h1>
                    <hr class="my-4">
                    <p>Pour commencer, rendez-vous sur la page de connexion pour utiliser l'application.</p>
                    <a class="btn btn-primary btn-lg" href="{{ path('app_login') }}" role="button">Se connecter</a>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <img src="{{ asset('../img/desk.jpg') }}" alt="Description of the image" class="img-fluid">
            </div>
        </div>
        <div class="row mt-2 mb-5">
            <div class="col-12 col-md-6">
                <h3>Besoin d'information?</h3>
                <a class="btn btn-secondary btn-lg" href="{{ path('app_contact') }}" role="button">Contactez-nous</a>
            </div>
        </div>
    </div>
{% endblock %}
