{% extends "base.html.twig" %}
{% block title %}Atelier-Desk Edit solution
{% endblock %}
{% block body %}
	<div
		class="container">

		{# Button pour revenir a la liste solutionst #}
		<a href="{{path('app_ticketsolutions')}}" class="btn btn-primary mt-4">
			Retour a liste des solutions</a>

		<h1 class="mt-4">Modification solution</h1>



		<form name="ticket" method="post" enctype="multipart/form-data">

			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
				<div class="form-error">
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description) }}
				<div class="form-error">
					{{ form_errors(form.description) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.ticket) }}
				{{ form_widget(form.ticket) }}
				<div class="form-error">
					{{ form_errors(form.ticket) }}
				</div>
			</div>

			{{ form_row(form._token) }}

			<button type="submit" id="submit" name="ticketsolutions[submit]" class="btn btn-info mt-2">Modifier la solution</button>

		</form>
	</div>
{% endblock %}

